<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_esis_digital_alloc_mat_form" model="ir.ui.view">
        <field name="name">esis_digital.alloc_mat_form</field>
        <field name="model">esis_digital.allocation_mat</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="materiel_id"/>
                        <field name="categorie_id"/>
                        <field name="quantity"/>
                        <field name="motif"/>
                        <field name="attachment"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="esis_digital_alloc_mat_list" model="ir.ui.view">
        <field name="name">esis_digital.alloc_mat_list</field>
        <field name="model">esis_digital.allocation_mat</field>
        <field name="arch" type="xml">
            <tree>
                <field name="materiel_id"/>
                <field name="categorie_id"/>
                <field name="quantity"/>
                <field name="motif"/>
                <field name="attachment"/>
                <field name="create_date"/>
                <field name="create_uid"/>
            </tree>
        </field>
    </record>

</odoo>