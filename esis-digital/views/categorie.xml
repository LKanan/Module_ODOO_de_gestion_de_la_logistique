<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_esis_digital_categorie_form" model="ir.ui.view">
        <field name="name">esis_digital.categorie_form</field>
        <field name="model">esis_digital.categorie</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="esis_digital_categorie_list" model="ir.ui.view">
        <field name="name">esis_digital.categorie_list</field>
        <field name="model">esis_digital.categorie</field>
        <field name="arch" type="xml">
            <tree class="text-center">
                <field name="name" class="text-center"/>
            </tree>
        </field>
    </record>

    <record id="action_esis_digital_categorie" model="ir.actions.act_window">
        <field name="name">Gestion des categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">esis_digital.categorie</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
