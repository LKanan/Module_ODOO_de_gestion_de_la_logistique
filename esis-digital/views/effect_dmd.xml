<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_esis_digital_effect_dmd_form" model="ir.ui.view">
        <field name="name">esis_digital.effect_dmd_form</field>
        <field name="model">esis_digital.effect_dmd</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="create_uid"/>
                        <field name="create_date"/>
                        <field name="state_request"/>
                        <field name="need_ids"/>
                        <field name="montant_total"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="esis_digital_effect_dmd_list" model="ir.ui.view">
        <field name="name">esis_digital.effect_dmd_list</field>
        <field name="model">esis_digital.effect_dmd</field>
        <field name="arch" type="xml">
            <tree class="text-center">
                <field name="create_uid" class="text-center"/>
                <field name="create_date" class="text-center"/>
                <field name="state_request" class="text-center"/>
            </tree>
        </field>
    </record>

</odoo>
